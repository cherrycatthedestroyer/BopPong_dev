<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/playerImageView"
                android:layout_width="137dp"
                android:layout_height="137dp"
                tools:srcCompat="@drawable/testprofile1" />

            <TextView
                android:id="@+id/playerNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/userNameDefault"
                app:layout_constraintStart_toEndOf="@+id/playerImageView" />

            <TextView
                android:id="@+id/playerStatusView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/userSongUnsubmitted"
                app:layout_constraintStart_toEndOf="@+id/playerImageView"
                app:layout_constraintTop_toBottomOf="@+id/playerNameView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>